<% if current_user %>

  <li><a href="#"> Welcome <%= current_user.name %>!</a></li>
  <li><%= link_to 'Logout', session_path(session), method: :delete %></li>

<% else %>

  <li><%= link_to 'Register', new_user_path %></li>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      Log In <span class="caret"></span>
    </a>

    <ul class="dropdown-menu" >
      <%= form_tag sessions_path, class: "navbar-form navbar-right" do %>
        <h5> Log in </h5>
        <div class="field">
          <%= text_field_tag :email, params[:email], {class: "form-control", placeholder: "Email"} %>
        </div>
        <br>
        <div class="field">
          <%= password_field_tag :password,"", {class: "form-control", placeholder: "Password"}  %>
        </div>
        <br>
        <div class="actions">
          <button class="btn btn-success"> Log in </button>
        </div>
      <% end %>
    </ul>
  </li>
<% end %>
